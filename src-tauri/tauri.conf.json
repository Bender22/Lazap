{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "http://localhost:8080/",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Lazap",
    "version": "0.6.2"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    },
    "allowlist": {
      "dialog": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "execute": true,
        "scope": [
          {
            "name": "which",
            "cmd": "which",
            "args": true
          },
          {
            "name": "cmd",
            "cmd": "cmd",
            "args": true
          },
          {
            "name": "start",
            "cmd": "start",
            "args": true
          }
        ]
      },
      "http": {
        "request": true,
        "scope": ["https://**", "http://**"]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$APPCONFIG/cache/games/banners/**", "$APPCONFIG/cache/user/**"]
      },
      "window": {
        "center": true,
        "create": true,
        "close": true,
        "hide": true,
        "maximize": true,
        "minimize": true,
        "print": false,
        "show": true,
        "startDragging": true,
        "unmaximize": true,
        "unminimize": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.lazap.config",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "Lazap",
        "height": 630,
        "width": 1360,
        "minHeight": 580,
        "minWidth": 1250,
        "center": true,
        "visible": false,
        "decorations": false
      }
    ]
  }
}
